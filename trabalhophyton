def soma (x, y):
    return x + y 

print(soma(3, 100))
print(soma(3, 7343284328748234))


def simples (cor):
    if cor == 'amarelo':
        return 'escolheu certo'
    
def completo (cor):
    if cor == 'vermelho':
        return 'brigadeiro'
    elif cor == 'laranja':
        return 'fantastico'
    else:
        return 'absurdo'
    
def medio (cor):
    if cor == 'verde':
      return 'escolheu certo'
    else: 
      return 'tente novamente'
    
        
